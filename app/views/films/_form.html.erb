<%= form_for @film, :html => {:multipart => true} do |f| %>
  <% if @film.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@film.errors.count, "error") %> prohibited this film from being saved:</h2>

      <ul>
      <% @film.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :vi_name %><br />
    <%= f.text_field :vi_name %>
  </div>
  <div class="field">
    <%= f.label :cover_image %><br />
    <%= f.file_field :cover_image %>
  </div>
  <div class="field">
    <%= f.label :actor_tokens, "Actors" %><br />
  	<%= f.text_field :actor_tokens, "data-pre" => @film.actors.map(&:attributes).to_json %>
  </div>
  <div class="field">
    <%= f.label :release_day %><br />
    <%= f.date_select :release_day %>
  </div>
  <div class="field">
    <%= f.label :plot %><br />
    <%= f.text_area :plot %>
  </div>
  <div class="field">
    <%= f.label :runtime %><br />
    <%= f.text_field :runtime %>
  </div>
  <div class="field">
    <%= f.label :overview %><br />
    <%= f.text_area :overview %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
